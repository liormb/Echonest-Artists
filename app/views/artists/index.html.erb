<div class="artists container-fluid">
	<ul class="artists-list row-fluid">
		<li class="artist col-xs-12 col-sm-6 col-md-4 col-lg-3 slow-transition"
				style="background-color: {{ artist.color }};"
				ng-repeat="artist in artists | orderBy:field:true">
			<p class="hotttnesss-rank">{{ $index + 1 }}</p>
			<p class="score">{{ artist.score }}</p>
			<p class="name">{{ artist.name }}</p>
			<p class="location">{{ artist.location }}</p>
			<p class="official-url"><a class="slow-transition" href="{{ artist.official_url }}" target="_blank">Official Website</a></p>
			<p class="lastfm-url"><a class="slow-transition" href="{{ artist.lastfm_url }}" target="_blank"><span class="cover-image"></span>LastFM</a></p>
		</li>
	</ul>
</div>